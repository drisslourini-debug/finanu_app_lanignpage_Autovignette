/* ===== CSS Variables (Finanu Branding) ===== */
:root {
    --primary-color: #1E3A8A;      /* Dunkelblau */
    --secondary-color: #10B981;    /* Gr√ºn */
    --accent-color: #F59E0B;       /* Orange */
    --success-color: #06B6D4;      /* Cyan */
    --danger-color: #EF4444;       /* Rot */
    --bg-light: #F8FAFC;           /* Hellgrau */
    --bg-dark: #1F2937;            /* Dunkelgrau */
    --text-dark: #1F2937;
    --text-light: #6B7280;
    --border-color: #E5E7EB;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

/* ===== Global Styles ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: var(--bg-light);
    color: var(--text-dark);
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* ===== Hero Section ===== */
.hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    padding: 80px 20px;
    min-height: 100vh;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-color) 50%, var(--bg-light) 50%, var(--bg-light) 100%);
}

.hero-content {
    color: white;
}

.logo {
    margin-bottom: 40px;
}

.logo-img {
    max-width: 120px;
    height: auto;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    line-height: 1.2;
}

.hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 15px;
    opacity: 0.95;
    font-weight: 600;
}

.hero-description {
    font-size: 1.1rem;
    margin-bottom: 40px;
    opacity: 0.85;
}

.hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
}

.visual-card {
    background: white;
    border-radius: 20px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: var(--shadow-lg);
    position: relative;
    animation: slideUp 1s ease-out;
}

.visual-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--secondary-color);
    color: white;
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
}

.visual-amount {
    font-size: 3rem;
    font-weight: 800;
    color: var(--secondary-color);
    margin-bottom: 10px;
}

.visual-text {
    color: var(--text-light);
    font-size: 1rem;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ===== Buttons ===== */
.btn {
    padding: 12px 28px;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: none;
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-primary {
    background-color: var(--accent-color);
    color: white;
}

.btn-primary:hover:not(:disabled) {
    background-color: #D97706;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-secondary {
    background-color: var(--text-light);
    color: white;
}

.btn-secondary:hover:not(:disabled) {
    background-color: var(--text-dark);
}

.btn-lg {
    padding: 16px 40px;
    font-size: 1.1rem;
    width: 100%;
}

/* ===== Quiz Section ===== */
.quiz-section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 40px 20px;
    background: linear-gradient(135deg, var(--bg-light) 0%, white 100%);
}

.quiz-container {
    background: white;
    border-radius: 20px;
    padding: 50px;
    max-width: 700px;
    width: 100%;
    box-shadow: var(--shadow-lg);
}

/* Progress Bar */
.progress-bar {
    width: 100%;
    height: 6px;
    background-color: var(--border-color);
    border-radius: 3px;
    margin-bottom: 10px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--secondary-color), var(--accent-color));
    width: 33.33%;
    transition: width 0.3s ease;
    border-radius: 3px;
}

.progress-text {
    text-align: center;
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 30px;
}

/* Quiz Content */
.quiz-content {
    margin-bottom: 40px;
    min-height: 300px;
}

.question {
    display: none;
    animation: fadeIn 0.5s ease;
}

.question.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.question-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 30px;
    color: var(--primary-color);
    line-height: 1.3;
    display: flex;
    align-items: center;
    gap: 15px;
}

.question-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
}

.question-options {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.option-btn {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 20px;
    background: var(--bg-light);
    border: 2px solid var(--border-color);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.05rem;
    font-weight: 500;
    text-align: left;
    color: var(--text-dark);
}

.option-btn:hover {
    border-color: var(--accent-color);
    background-color: #FEF3C7;
    transform: translateX(5px);
}

.option-btn.selected {
    background-color: var(--accent-color);
    color: white;
    border-color: var(--accent-color);
}

.option-icon {
    font-size: 1.5rem;
    min-width: 30px;
}

/* Select Dropdown */
.select-dropdown {
    width: 100%;
    padding: 15px;
    font-size: 1rem;
    border: 2px solid var(--border-color);
    border-radius: 12px;
    background-color: white;
    color: var(--text-dark);
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
}

.select-dropdown:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
}

.select-dropdown:hover {
    border-color: var(--accent-color);
}

/* Quiz Navigation */
.quiz-nav {
    display: flex;
    gap: 15px;
    justify-content: space-between;
}

.quiz-nav .btn {
    flex: 1;
}

/* ===== Results Section ===== */
.results-section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 40px 20px;
    background: linear-gradient(135deg, #ECFDF5 0%, #F0FDF4 100%);
}

.results-card {
    background: white;
    border-radius: 20px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: var(--shadow-lg);
    border: 3px solid var(--secondary-color);
}

.results-card.success {
    border-color: var(--secondary-color);
}

.results-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    animation: bounce 1s ease-out;
}

@keyframes bounce {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-20px);
    }
}

.results-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: 15px;
}

.results-message {
    font-size: 1.2rem;
    color: var(--text-dark);
    margin-bottom: 30px;
    line-height: 1.5;
}

/* App Preview */
.results-app-preview {
    width: 100%;
    margin: 30px 0;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
}

.app-preview-image {
    width: 100%;
    height: auto;
    display: block;
}

.results-details {
    background: var(--bg-light);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 40px;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
    font-size: 1rem;
}

.detail-item:last-child {
    margin-bottom: 0;
}

.detail-label {
    color: var(--text-light);
    font-weight: 600;
}

.detail-value {
    color: var(--primary-color);
    font-weight: 700;
}

/* ===== Email Capture Form ===== */
.email-capture {
    text-align: left;
    padding-top: 30px;
    border-top: 2px solid var(--border-color);
}

.email-capture h3 {
    font-size: 1.3rem;
    color: var(--primary-color);
    margin-bottom: 25px;
    text-align: center;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-dark);
    font-size: 0.95rem;
}

.form-group input {
    width: 100%;
    padding: 12px;
    border: 2px solid var(--border-color);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-group input:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
}

.form-group input::placeholder {
    color: var(--text-light);
}

/* ===== Not Eligible Section ===== */
.not-eligible-section {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 40px 20px;
    background: linear-gradient(135deg, #FEF2F2 0%, #FEE2E2 100%);
}

.not-eligible-container {
    width: 100%;
}

.not-eligible-card {
    background: white;
    border-radius: 20px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: var(--shadow-lg);
    max-width: 500px;
    margin: 0 auto;
    border: 3px solid var(--danger-color);
}

.not-eligible-icon {
    font-size: 4rem;
    margin-bottom: 20px;
}

.not-eligible-card h2 {
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: 15px;
}

.not-eligible-card p {
    color: var(--text-dark);
    margin-bottom: 15px;
    font-size: 1.05rem;
}

.not-eligible-card .note {
    color: var(--text-light);
    font-size: 0.95rem;
}

/* ===== Footer ===== */
.footer {
    background-color: var(--primary-color);
    color: white;
    text-align: center;
    padding: 30px 20px;
    margin-top: 60px;
}

.footer a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 600;
}

.footer a:hover {
    text-decoration: underline;
}

/* ===== Responsive Design ===== */
@media (max-width: 768px) {
    .hero {
        grid-template-columns: 1fr;
        padding: 40px 20px;
        min-height: auto;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-color) 100%);
    }

    .hero-title {
        font-size: 2.2rem;
    }

    .hero-subtitle {
        font-size: 1.2rem;
    }

    .hero-description {
        font-size: 1rem;
    }

    .hero-visual {
        margin-top: 40px;
    }

    .visual-card {
        padding: 35px 25px;
    }

    .visual-amount {
        font-size: 2.5rem;
    }

    .quiz-container {
        padding: 30px;
    }

    .question-title {
        font-size: 1.4rem;
    }

    .option-btn {
        padding: 15px;
        font-size: 1rem;
        gap: 15px;
    }

    .quiz-nav {
        flex-direction: column;
    }

    .results-card {
        padding: 30px 20px;
    }

    .results-title {
        font-size: 1.8rem;
    }

    .results-message {
        font-size: 1.1rem;
    }

    .not-eligible-card {
        padding: 30px 20px;
    }

    .not-eligible-card h2 {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 1.8rem;
    }

    .hero-subtitle {
        font-size: 1rem;
    }

    .hero-description {
        font-size: 0.95rem;
    }

    .btn {
        padding: 10px 20px;
        font-size: 0.95rem;
    }

    .btn-lg {
        padding: 14px 28px;
    }

    .quiz-container {
        padding: 20px;
    }

    .question-title {
        font-size: 1.2rem;
    }

    .results-title {
        font-size: 1.5rem;
    }

    .email-capture h3 {
        font-size: 1.1rem;
    }
}
